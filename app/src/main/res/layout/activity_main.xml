<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_vungle"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="@dimen/margin_vertical_view"
                android:layout_marginBottom="@dimen/margin_vertical_view"
                android:scaleType="fitCenter"
                android:src="@drawable/vungle_logo_aqua_mango" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:id="@+id/view_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_top"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_app_id"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="App ID"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_ad_formats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color"
                    android:gravity="bottom" />

                <LinearLayout
                    android:id="@+id/view_interstitial"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_single_row"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_vertical_view"
                    android:layout_marginBottom="@dimen/margin_vertical_view"
                    android:orientation="vertical"
                    android:scaleType="fitCenter">

                    <TextView
                        android:id="@+id/tv_interstitial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/title_interstitial"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_size_placement" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_row_height"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_vertical"
                        android:layout_marginBottom="@dimen/margin_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/padding_horizontal"
                        android:paddingRight="@dimen/padding_horizontal"
                        android:scaleType="fitCenter">

                        <Button
                            android:id="@+id/btn_load_interstitial"
                            android:layout_width="@dimen/btn_width"
                            android:layout_height="@dimen/btn_height"
                            android:layout_marginLeft="@dimen/btn_margin_horizontal"
                            android:layout_marginRight="@dimen/btn_margin_horizontal"
                            android:layout_weight="1"
                            android:background="@drawable/aqua_button_bg"
                            android:text="load"
                            android:textColor="@color/buttonText"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_play_interstitial"
                            android:layout_width="@dimen/btn_width"
                            android:layout_height="@dimen/btn_height"
                            android:layout_marginLeft="@dimen/btn_margin_horizontal"
                            android:layout_marginRight="@dimen/btn_margin_horizontal"
                            android:layout_weight="1"
                            android:background="@drawable/aqua_button_bg"
                            android:text="play"
                            android:textColor="@color/buttonText"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color"
                    android:gravity="bottom" />

                <LinearLayout
                    android:id="@+id/view_rewarded_video"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_single_row"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_vertical_view"
                    android:layout_marginBottom="@dimen/margin_vertical_view"
                    android:orientation="vertical"
                    android:scaleType="fitCenter">

                    <TextView
                        android:id="@+id/tv_rewarded_video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/title_rewarded_video"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_size_placement" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_row_height"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_vertical"
                        android:layout_marginBottom="@dimen/margin_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/padding_horizontal"
                        android:paddingRight="@dimen/padding_horizontal"
                        android:scaleType="fitCenter">

                        <Button
                            android:id="@+id/btn_load_rewarded_video"
                            android:layout_width="@dimen/btn_width"
                            android:layout_height="@dimen/btn_height"
                            android:layout_marginLeft="@dimen/btn_margin_horizontal"
                            android:layout_marginRight="@dimen/btn_margin_horizontal"
                            android:layout_weight="1"
                            android:background="@drawable/aqua_button_bg"
                            android:text="load"
                            android:textColor="@color/buttonText"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_play_rewarded_video"
                            android:layout_width="@dimen/btn_width"
                            android:layout_height="@dimen/btn_height"
                            android:layout_marginLeft="@dimen/btn_margin_horizontal"
                            android:layout_marginRight="@dimen/btn_margin_horizontal"
                            android:layout_weight="1"
                            android:background="@drawable/aqua_button_bg"
                            android:text="play"
                            android:textColor="@color/buttonText"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color"
                    android:gravity="bottom" />

                <LinearLayout
                    android:id="@+id/view_mrec"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_double_row"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_vertical_view"
                    android:layout_marginBottom="@dimen/margin_vertical_view"
                    android:orientation="vertical"
                    android:scaleType="fitCenter">

                    <TextView
                        android:id="@+id/tv_mrec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/title_mrec"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_size_placement" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_row_height"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_vertical"
                        android:layout_marginBottom="@dimen/margin_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/padding_horizontal"
                        android:paddingRight="@dimen/padding_horizontal"
                        android:scaleType="fitCenter">

                        <Button
                            android:id="@+id/btn_load_mrec"
                            android:layout_width="@dimen/btn_width"
                            android:layout_height="@dimen/btn_height"
                            android:layout_marginLeft="@dimen/btn_margin_horizontal"
                            android:layout_marginRight="@dimen/btn_margin_horizontal"
                            android:layout_weight="1"
                            android:background="@drawable/aqua_button_bg"
                            android:text="load"
                            android:textColor="@color/buttonText"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_play_mrec"
                            android:layout_width="@dimen/btn_width"
                            android:layout_height="@dimen/btn_height"
                            android:layout_marginLeft="@dimen/btn_margin_horizontal"
                            android:layout_marginRight="@dimen/btn_margin_horizontal"
                            android:layout_weight="1"
                            android:background="@drawable/aqua_button_bg"
                            android:text="play"
                            android:textColor="@color/buttonText"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_row_height"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_vertical"
                        android:layout_marginBottom="@dimen/margin_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/padding_horizontal"
                        android:paddingRight="@dimen/padding_horizontal"
                        android:scaleType="fitCenter">

                        <Button
                            android:id="@+id/btn_pause_resume_mrec"
                            android:layout_width="@dimen/btn_width"
                            android:layout_height="@dimen/btn_height"
                            android:layout_marginLeft="@dimen/btn_margin_horizontal"
                            android:layout_marginRight="@dimen/btn_margin_horizontal"
                            android:layout_weight="1"
                            android:background="@drawable/aqua_button_bg"
                            android:text="pause/resume"
                            android:textColor="@color/buttonText"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_close_mrec"
                            android:layout_width="@dimen/btn_width"
                            android:layout_height="@dimen/btn_height"
                            android:layout_marginLeft="@dimen/btn_margin_horizontal"
                            android:layout_marginRight="@dimen/btn_margin_horizontal"
                            android:layout_weight="1"
                            android:background="@drawable/aqua_button_bg"
                            android:text="close"
                            android:textColor="@color/buttonText"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/container_mrec"
                    android:layout_width="@dimen/container_width_mrec"
                    android:layout_height="@dimen/container_height_mrec"
                    android:layout_gravity="center"
                    android:background="#808080"
                    android:gravity="center"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color"
                    android:gravity="bottom" />

                <LinearLayout
                    android:id="@+id/view_banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_four_row"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_vertical_view"
                    android:layout_marginBottom="@dimen/margin_vertical_view"
                    android:orientation="vertical"
                    android:scaleType="fitCenter">

                    <TextView
                        android:id="@+id/tv_banner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/title_banner"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_size_placement" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_row_height"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_vertical"
                        android:layout_marginBottom="@dimen/margin_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/padding_horizontal"
                        android:paddingRight="@dimen/padding_horizontal"
                        android:scaleType="fitCenter">

                        <Button
                            android:id="@+id/btn_load_banner"
                            android:layout_width="@dimen/btn_width"
                            android:layout_height="@dimen/btn_height"
                            android:layout_marginLeft="@dimen/btn_margin_horizontal"
                            android:layout_marginRight="@dimen/btn_margin_horizontal"
                            android:layout_weight="1"
                            android:background="@drawable/aqua_button_bg"
                            android:text="load"
                            android:textColor="@color/buttonText"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_play_banner"
                            android:layout_width="@dimen/btn_width"
                            android:layout_height="@dimen/btn_height"
                            android:layout_marginLeft="@dimen/btn_margin_horizontal"
                            android:layout_marginRight="@dimen/btn_margin_horizontal"
                            android:layout_weight="1"
                            android:background="@drawable/aqua_button_bg"
                            android:text="play"
                            android:textColor="@color/buttonText"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_row_height"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_vertical"
                        android:layout_marginBottom="@dimen/margin_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/padding_horizontal"
                        android:paddingRight="@dimen/padding_horizontal"
                        android:scaleType="fitCenter">

                        <Button
                            android:id="@+id/btn_pause_resume_banner"
                            android:layout_width="@dimen/btn_width"
                            android:layout_height="@dimen/btn_height"
                            android:layout_marginLeft="@dimen/btn_margin_horizontal"
                            android:layout_marginRight="@dimen/btn_margin_horizontal"
                            android:layout_weight="1"
                            android:background="@drawable/aqua_button_bg"
                            android:text="pause/resume"
                            android:textColor="@color/buttonText"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_close_banner"
                            android:layout_width="@dimen/btn_width"
                            android:layout_height="@dimen/btn_height"
                            android:layout_marginLeft="@dimen/btn_margin_horizontal"
                            android:layout_marginRight="@dimen/btn_margin_horizontal"
                            android:layout_weight="1"
                            android:background="@drawable/aqua_button_bg"
                            android:text="close"
                            android:textColor="@color/buttonText"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_row_height"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_vertical"
                        android:layout_marginBottom="@dimen/margin_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/padding_horizontal"
                        android:paddingRight="@dimen/padding_horizontal"
                        android:scaleType="fitCenter">

                        <Button
                            android:id="@+id/btn_list_banner"
                            android:layout_width="@dimen/btn_width"
                            android:layout_height="@dimen/btn_height"
                            android:layout_marginLeft="@dimen/btn_margin_horizontal"
                            android:layout_marginRight="@dimen/btn_margin_horizontal"
                            android:layout_weight="1"
                            android:background="@drawable/aqua_button_bg"
                            android:text="Show list"
                            android:textColor="@color/buttonText"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_row_height"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_vertical"
                        android:layout_marginBottom="@dimen/margin_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/padding_horizontal"
                        android:paddingRight="@dimen/padding_horizontal"
                        android:scaleType="fitCenter">

                        <Button
                            android:id="@+id/btn_multiple_banner"
                            android:layout_width="@dimen/btn_width"
                            android:layout_height="@dimen/btn_height"
                            android:layout_marginLeft="@dimen/btn_margin_horizontal"
                            android:layout_marginRight="@dimen/btn_margin_horizontal"
                            android:layout_weight="1"
                            android:background="@drawable/aqua_button_bg"
                            android:text="Multiple Banner"
                            android:textColor="@color/buttonText"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/container_banner"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#808080"
                    android:gravity="center"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color"
                    android:gravity="bottom" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
